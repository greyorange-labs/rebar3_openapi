{erl_opts, [debug_info]}.

{deps, [
    {yamerl, "0.10.0"},
    {jsx, "3.1.0"}
]}.

{project_plugins, [
    {rebar3_hex, "7.0.7"}
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.4.0"},
            {meck, "0.9.2"}
        ]}
    ]}
]}.

{dialyzer, [
    {warnings, [unknown]},
    {plt_extra_apps, [yamerl, jsx]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

